            </form>
            <small class="text-muted d-block mt-2 text-center">
              Example: <code>TLGF-9F4C-3D23B-Y783L</code>
            </small>
          </div>
        </div>
      </div>
    </div>

    <!-- Indicators (dots only) -->
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="0"
        class="active"
      ></button>
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="1"
      ></button>
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="2"
      ></button>
    </div>
  </div>
</section>

