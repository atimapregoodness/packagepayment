<% layout("layout/boilerplate") %>
<!-- GLOBAL STYLE -->
<style>
  :root {
    --brand-1: #171a20;
    --accent: #f59e0b;
    --dark: #061224;
    --muted: #6c757d;
    --radius: 14px;
  }

  /* HERO SLIDER */
  #hero {
    min-height: 100vh;
    position: relative;
    margin-top: -4em !important;
    overflow: hidden;
  }

  #btnSearch {
    background: none;
    padding: 0.4em;
    border: none;
    width: 2em;
  }

  .carousel-item {
    min-height: 100vh;
  }

  .hero-bg {
    min-height: 100vh;
    background-size: cover !important;
    background-position: center !important;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(6, 18, 36, 0.65);
    z-index: 1;
  }

  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    padding: 0 1rem;
  }

  .hero-left h1 {
    font-weight: 700;
    font-size: 2.8rem;
    color: #fff;
  }
  .hero-left p {
    color: #e5e5e5;
    font-size: 1.15rem;
  }

  .hero-btn {
    border-radius: var(--radius);
    padding: 0.65rem 1.25rem;
    font-weight: 600;
    transition: all 0.25s ease;
  }
  .hero-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(33, 37, 46, 0.35);
  }

  .hero-card {
    background: #fff;
    border-radius: var(--radius);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    padding: 2rem;
    color: var(--dark);
  }

  .txs-input {
    width: 16rem;
    padding: 0.55rem 0.8rem;
    border-radius: 8px;
    border: 1px solid #ddd;
    transition: all 0.25s ease;
  }
  .txs-input:focus {
    border-color: var(--brand-1);
    box-shadow: 0 0 0 3px rgba(23, 26, 32, 0.25);
    outline: none;
  }

  /* Carousel Indicators */
  .carousel-indicators [data-bs-target] {
    background-color: #fff;
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  /* FEATURES */
  .feature-card {
    border-radius: var(--radius);
    background: #fff;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    padding: 1.5rem;
    text-align: center;
    transition: all 0.25s ease;
  }
  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
  }
  .feature-icon {
    width: 60px;
    height: 60px;
    background: rgba(23, 26, 32, 0.1);
    color: var(--brand-1);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    font-size: 1.5rem;
    margin: 0 auto 1rem;
  }

  /* HOW IT WORKS */
  .step-card {
    background: #fff;
    border-radius: var(--radius);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    padding: 2rem 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
  }
  .step-card:hover {
    transform: translateY(-6px);
  }

  /* TESTIMONIALS */
  .testimonial {
    background: #fff;
    border-radius: var(--radius);
    padding: 1.5rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    font-style: italic;
    transition: all 0.3s ease;
  }
  .testimonial:hover {
    transform: scale(1.02);
  }

  /* ANIMATIONS */
  .fade-in {
    opacity: 0;
    transform: translateY(25px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  .fade-in.show {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<!-- HERO SECTION WITH SLIDER -->
<section id="hero">
