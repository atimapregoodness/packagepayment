<% layout("layout/boilerplate") %>

<div class="container py-5">
  <!-- Top Stats & Contact Card -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="card shadow-sm rounded-4 border-0 bg-white">
        <div class="row g-3 align-items-center p-4">
          <!-- Admin Info -->
          <div class="col-md-8">
            <h3 class="fw-bold text-dark mb-3">Admin Dashboard</h3>

            <!-- Email -->
            <div class="mb-2 d-flex align-items-center">
              <i class="fas fa-envelope me-2 text-primary"></i>
              <span class="text-muted fw-bold me-2">Email:</span>
              <span class="text-dark"><%= admin.email %></span>
            </div>

            <!-- Telegram -->
            <div class="mb-2 d-flex align-items-center">
              <i class="fab fa-telegram-plane me-2 text-info"></i>
              <span class="text-muted fw-bold me-2">Telegram:</span>
              <% if(admin.contact.telegram) { %>
              <a
                href="<%= admin.contact.telegram %>"
                class="text-primary text-decoration-none"
                target="_blank"
                rel="noopener noreferrer"
              >
                <%= admin.contact.telegram %>
              </a>
              <% } else { %>
              <span class="text-secondary">Not Set</span>
              <% } %>
            </div>

            <!-- WhatsApp -->
            <div class="mb-2 d-flex align-items-center">
              <i class="fab fa-whatsapp me-2 text-success"></i>
              <span class="text-muted fw-bold me-2">WhatsApp:</span>
              <% if(admin.contact.whatsapp) { %>
              <a
                href="https://wa.me/<%= admin.contact.whatsapp.replace(/\D/g,'') %>"
                class="text-success text-decoration-none"
                target="_blank"
                rel="noopener noreferrer"
              >
                <%= admin.contact.whatsapp %>
              </a>
              <% } else { %>
              <span class="text-secondary">Not Set</span>
              <% } %>
            </div>

            <!-- Stats -->
            <div class="d-flex flex-wrap gap-3 mt-3">
              <div class="stat-box rounded-3 p-3 shadow-sm bg-light text-dark">
                <i class="fas fa-users me-2 text-primary"></i>
                Clients Created: <strong><%= links.length %></strong>
              </div>
              <div class="stat-box rounded-3 p-3 shadow-sm bg-light text-dark">
                <i class="fas fa-dollar-sign me-2 text-success"></i>
                Clients with Payments: <strong><%= stats.clientsPaid %></strong>
              </div>
            </div>
          </div>

          <!-- Edit Contact Button -->
          <div
            class="col-md-4 d-flex justify-content-md-end align-items-center"
          >
            <a href="/add-contact" class="btn btn-outline-dark fw-bold">
              <i class="fas fa-edit me-2"></i> Edit Contact Info
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Links Section -->
  <h2 class="mb-4 text-center text-dark fw-bold">My Links</h2>
  <div class="row g-4">
    <% if (links && links.length) { %> <% for (let link of links) { %>
    <div class="col-sm-6 col-md-4 col-lg-4">
      <div
        class="card link-card rounded-4 shadow-sm overflow-hidden border-0 h-100"
      >
        <div class="card-body d-flex flex-column justify-content-between p-3">
          <h5 class="card-title fw-bold text-primary">
            <i class="fas fa-link me-2"></i><%= link.name %>
          </h5>
          <p class="card-text text-muted mb-2">
            Created: <%= link.createdAt.toLocaleString() %>
          </p>
          <p class="card-text text-secondary small">
            <i class="fas fa-key me-1"></i> Transaction ID: <%=
            link.transactionId %>
          </p>
        </div>
        <div
          class="card-footer d-flex flex-sm-column gap-2 bg-white border-0 p-3"
        >
          <a
            href="<%= link.link %>"
            target="_blank"
            class="btn btn-primary fw-bold"
          >
            <i class="fas fa-external-link-alt me-1"></i> Visit
          </a>
          <a
            href="/link-info/<%= link.transactionId %>"
            class="btn btn-warning fw-bold"
          >
            <i class="fas fa-info-circle me-1"></i> Updates
          </a>
        </div>
      </div>
    </div>
    <% } %> <% } else { %>
    <p class="text-center text-muted w-100">No links found yet.</p>
    <% } %>
  </div>
</div>

<style>
  h2,
  h3 {
    letter-spacing: 0.5px;
  }

  /* Admin Card */
  .card.bg-white {
    transition: box-shadow 0.3s;
  }
  .card.bg-white:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  /* Stats Boxes */
  .stat-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    min-width: 180px;
    background-color: #f8f9fa;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .stat-box:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  /* Buttons */
  .btn-outline-dark {
    border-width: 2px;
    color: #343a40;
    transition: all 0.2s;
  }
  .btn-outline-dark:hover {
    background-color: #343a40;
    color: #fff;
    transform: translateY(-2px);
  }

  /* Link Cards */
  .link-card {
    transition: transform 0.3s, box-shadow 0.3s;
    background: white;
  }
  .link-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }
  .card-title {
    font-size: 1.2rem;
  }
  .card-footer .btn {
    transition: transform 0.2s;
  }
  .card-footer .btn:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 576px) {
    .card-footer .btn {
      width: 100% !important;
    }
  }
</style>
