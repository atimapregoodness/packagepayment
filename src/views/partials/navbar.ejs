          <a
            class="nav-link <%= currentPage === '/auth/logout' ? 'active' : '' %>"
            href="/auth/logout"
            id="logout"
          >
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </li>
        <% } %> <% if (!user) { %>

        <li class="nav-item me-3">
          <a
            class="nav-link <%= currentPage === '/auth/login' ? 'active' : '' %>"
            href="/auth/login"
          >
            <i class="fa fa-user"></i> Login
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
