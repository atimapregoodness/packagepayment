          <a
            class="nav-link <%= currentPage === '/home' ? 'active' : '' %>"
            href="/home"
            >Home</a
          >
        </li>
        <% if (user && user.isAdmin) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === '/admin/dashboard' ? 'active' : '' %>"
            href="/admin/dashboard"
            >Dashboard</a
          >
        </li>
        <% } %> <% if (user && user.isCreator) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === '/creator/dashboard' ? 'active' : '' %>"
            href="/creator/dashboard"
            >Dashboard</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === '/creator/create-admin' ? 'active' : '' %>"
            href="/creator/create-admin"
            >Create Admin</a
          >
        </li>
        <% } %> <% if (user && (user.isAdmin || user.isCreator)) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === '/create-link' ? 'active' : '' %>"
            href="/create-link"
            >Create Link</a
