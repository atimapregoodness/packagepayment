<!-- PROFESSIONAL COMPLIANCE PAGE STYLES -->
<style>
  :root {
    --primary-blue: #0f1b33;
    --primary-navy: #1a2b6d;
    --accent-gold: #c9a96a;
    --accent-light: #f8f5f0;
    --white: #ffffff;
    --light-bg: #f8f9fa;
    --border-light: #eaeaea;
    --text-dark: #2d3748;
    --text-muted: #718096;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 8px 32px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 16px 48px rgba(0, 0, 0, 0.12);
    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-sm: 12px;
    --gradient-primary: linear-gradient(135deg, #0f1b33 0%, #1a2b6d 100%);
    --gradient-gold: linear-gradient(135deg, #c9a96a 0%, #d4b87a 100%);
    --gradient-light: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  }

  .compliance-hero {
    background: var(--gradient-light);
    padding: 140px 0 80px;
    margin-top: -2em;
    position: relative;
    overflow: hidden;
  }

  .compliance-hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 20% 80%,
        rgba(201, 169, 106, 0.05) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(26, 43, 109, 0.03) 0%,
        transparent 50%
      );
    z-index: 1;
  }

  .compliance-hero .container {
    position: relative;
    z-index: 2;
  }

  .professional-display {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-weight: 700;
    line-height: 1.1;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .banking-subtitle {
    color: var(--text-muted);
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 1.6;
  }

  .banking-card {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .banking-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(201, 169, 106, 0.02) 0%,
      rgba(15, 27, 51, 0.02) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .banking-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .banking-card:hover::before {
    opacity: 1;
  }

  .compliance-card {
    padding: 3rem 2.5rem;
    height: 100%;
    text-align: center;
  }

  .compliance-icon {
    width: 90px;
    height: 90px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.2rem;
    margin: 0 auto 1.5rem;
    transition: all 0.4s ease;
  }

  .compliance-card:hover .compliance-icon {
    transform: scale(1.1) rotate(5deg);
    background: var(--gradient-gold);
  }

  .certification-badge {
    width: 120px;
    height: 120px;
    background: var(--gradient-gold);
    color: var(--primary-blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    margin: 0 auto 1.5rem;
    border: 4px solid var(--white);
    box-shadow: var(--shadow-lg);
  }

  .regulation-card {
    padding: 2.5rem;
    height: 100%;
    border-left: 4px solid var(--accent-gold);
  }

  .framework-item {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-light);
    transition: all 0.3s ease;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .framework-item:hover {
    background: var(--light-bg);
    transform: translateX(10px);
  }

  .framework-item:last-child {
    border-bottom: none;
  }

  .framework-icon {
    width: 40px;
    height: 40px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .section-professional {
    padding: 5rem 0;
  }

  .section-professional-light {
    background: var(--gradient-light);
  }

  .section-professional-dark {
    background: var(--gradient-primary);
    color: white;
  }

  .banking-stat-number {
    font-size: 3.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .banking-stat-label {
    color: var(--text-muted);
    font-weight: 500;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .regulation-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .regulation-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }

  .regulation-item:hover {
    background: var(--light-bg);
    transform: translateY(-2px);
  }

  .regulation-flag {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .regulation-flag.americas {
    background: #dc2626;
    color: white;
  }
  .regulation-flag.europe {
    background: #2563eb;
    color: white;
  }
  .regulation-flag.asia {
    background: #059669;
    color: white;
  }
  .regulation-flag.mea {
    background: #7c3aed;
    color: white;
  }

  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .fade-in.show {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @media (max-width: 768px) {
    .compliance-hero {
      padding: 120px 0 60px;
    }

    .professional-display {
      font-size: 2.5rem;
    }

    .banking-stat-number {
      font-size: 2.5rem;
    }

    .compliance-card {
      padding: 2rem 1.5rem;
    }
  }
