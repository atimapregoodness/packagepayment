<% layout("layout/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4">All Admins & Their Clients</h2>

  <% if (admins.length > 0) { %> <% admins.forEach((admin, index) => { %>
  <div class="card mb-4 shadow-sm border-0 d-flex">
    <div
      class="card-header bg-dark text-white d-flex justify-content-between align-items-center"
    >
      <span
        ><i class="fas fa-user-shield me-2"></i> <%= admin.username %>
        <span class="badge bg-primary"><%= admin.email %></span></span
      >

      <button
        type="button"
        class="btn btn-danger btn-sm d-flex"
        data-bs-toggle="modal"
        data-bs-target="#confirmDeleteModal<%= admin._id %>"
      >
        <i class="fas fa-trash me-1"></i> Remove Admin
      </button>
      <!-- Confirm Delete Modal -->
      <div
        class="modal fade"
        id="confirmDeleteModal<%= admin._id %>"
        tabindex="-1"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header bg-danger text-white">
              <h5 class="modal-title">Confirm Delete</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <p class="text-danger">
                Are you sure you want to delete
                <strong><%= admin.username %></strong>
                and all their clients? This action cannot be undone.
              </p>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancel
              </button>
              <form
                action="/creator/admins/<%= admin._id %>/delete"
                method="POST"
              >
                <button type="submit" class="btn btn-danger">
                  Yes, Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-body">
      <!-- Delete Admin Button -->
      <% if (admin.userLinks && admin.userLinks.length > 0) { %>
      <!-- Dropdown Button -->
      <button
        class="btn btn-sm btn-outline-dark mb-3"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#clients<%= index %>"
        aria-expanded="false"
        aria-controls="clients<%= index %>"
      >
        View Clients (<%= admin.userLinks.length %>)
      </button>

      <!-- Collapsible Clients List -->
      <div class="collapse" id="clients<%= index %>">
        <ul class="list-group">
          <% admin.userLinks.forEach(client => { %>
          <li class="list-group-item">
            <strong><%= client.name %></strong> - <%= client.email || "No email"
            %><br />
            <small>
              Phone: <%= client.phone %> | Bank: <%= client.bank %> | Amount:
              <%= client.amount %> <%= client.currency %> | Status:
              <span
                class="badge <% if (client.status === 'successful') { %> bg-success <% } else if (client.status === 'declined') { %> bg-danger <% } else { %> bg-warning text-dark <% } %>"
              >
                <%= client.status %>
              </span>
              <a
                href="/link-info/<%= client.transactionId %>"
                class="btn btn-warning fw-bold"
              >
                <i class="fas fa-info-circle me-1"></i> Updates
              </a>
            </small>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } else { %>
      <p class="text-muted">No clients assigned to this admin yet.</p>
      <% } %>
    </div>
  </div>
  <% }) %> <% } else { %>
  <p class="text-muted">No admins created yet.</p>
  <% } %>
</div>
